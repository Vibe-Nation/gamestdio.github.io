@font-face {
  font-family 'pixel'
  src url('../fonts/Volter__28Goldfish_29.ttf')
  font-weight normal
  font-style normal
}

@font-face {
  font-family 'seasons-spring'
  src url('../fonts/seasons-spring.eot')
  src url('../fonts/seasons-spring.eot?#iefix') format('embedded-opentype'),
       url('../fonts/seasons-spring.woff') format('woff'),
       url('../fonts/seasons-spring.ttf') format('truetype'),
       url('../fonts/seasons-spring.svg#seasons-spring') format('svg')
  font-weight normal
  font-style normal
}

color-contrast = #3e3d4d

*
  margin 0
  padding 0

a
  color inherit
  &:hover
    opacity 0.8

body
  font-size 2.5vh
  line-height 4vh
  font-family 'pixel', 'Open Sans', sans-serif

h1
  font-size 3.5em
  color color-contrast

header
  width 100vw
  height 100vh
  display block
  background #fff

  &:before
    display block
    width 100vw
    height 100vh
    position absolute
    content ''
    top 0
    left 0
    background rgba(0,0,0,0.05)

  &:after
    display block
    content ''
    position absolute
    bottom 5vh
    left 0
    right 0
    margin-left auto
    margin-right auto
    width 35px
    height 20px
    background url('../images/arrow.png') no-repeat

  img
    position absolute
    left 0
    right 0
    top 44%
    margin auto
    @media (max-width: 800px)
      width 50%

nav
  z-index 100
  background #fff
  display block
  width 100%
  padding 24px 0

  position fixed
  left 0

  transition top 0.3s
  top -100px

  &.active
    top 0

  @media (max-width: 800px)
    display none !important

  &:before
    display block
    position absolute
    width 100%
    height 100%
    content ''
    top 0
    left 0
    background rgba(0,0,0,0.05)

  ul
    float right
    display inline-block
    margin 5px 0
    li
      display inline-block
      &:not(:last-child)
        padding-right 20px
      a
        font-size 1.2em
        color color-contrast
        // color white
        text-decoration none
        display inline-block
        // &.current
        //   color color-contrast


.content
  position relative
  margin 0 auto
  width 80vw
  max-width 1024px

section
  text-align center
  margin 15vh 0 10vh 0
  padding 5vh 0 15vh 0
  &:last-child
    margin-bottom 0
  &.contrast
    color white
    background color-contrast
    h1
      color white
  &#team
    ul
      list-style none
      display inline-block
      li
        margin 5vh 1vw
        display inline-block
        span
          display block
          font-size 14px
          padding 0.8vh 0
        img
          border-radius 4px
          border 2px solid #000


footer
  position relative
  padding 32px
  background black
  color white
  font-size 14px

  ul.social
    text-align right
    display block
    position absolute
    top -4px
    left 0
    right 0
    margin 0 auto

    list-style none
    display inline-block

    li
      display inline-block
      margin 0 3px
      a
        display inline-block
        width 3.8vh
        height 3.8vh

        &:hover
          opacity 1
          text-decoration none
        &.twitter
          sprite $social_twitter
          &:hover
            sprite $social_twitter_over
        &.facebook
          sprite $social_facebook
          &:hover
            sprite $social_facebook_over
        &.linkedin
          sprite $social_linkedin
          &:hover
            sprite $social_linkedin_over
