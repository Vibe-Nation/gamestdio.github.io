@import fonts

color-contrast = #57c98f

*
  margin 0
  padding 0

a
  color inherit
  &:hover
    opacity 0.8

body
  font-size 18px
  width 100vw
  height 100vh
  font-family 'Open Sans', sans-serif

h1
  font-size 3.5em
  font-family 'seasons-spring'
  color color-contrast

header
  width 100vw
  height 100vh
  display block
  background url('../images/background.jpg') center no-repeat
  background-size cover

  &:before
    display block
    width 100%
    height 100%
    position absolute
    content ''
    top 0
    left 0
    background rgba(0,0,0,0.7)

  &:after
    display block
    content ''
    position absolute
    bottom 5vh
    left 0
    right 0
    margin-left auto
    margin-right auto
    width 59px
    height 19px
    background url('../images/arrow.png') no-repeat

  img
    position absolute
    left 0
    right 0
    top 44%
    margin auto
    @media (max-width: 800px)
      width 50%

nav
  z-index 100
  background url('../images/background.jpg') center no-repeat
  background-size cover
  display block
  width 100%
  padding 24px 0

  position fixed
  left 0

  transition top 0.3s
  top -100px
  &.active
    top 0

  &:before
    display block
    position absolute
    width 100%
    height 100%
    content ''
    top 0
    left 0
    background rgba(0,0,0,0.7)

  ul
    float right
    display inline-block
    margin 5px 0
    li
      display inline-block
      &:not(:last-child)
        padding-right 20px
      a
        font-size 1.2em
        color white
        text-decoration none
        display inline-block
        &.current
          color color-contrast


.content
  position relative
  margin 0 auto
  width 80vw
  max-width 1024px

section
  text-align center
  margin 15vh 0 10vh 0
  padding 5vh 0 15vh 0
  &:last-child
    margin-bottom 0
  &.contrast
    color white
    background color-contrast
    h1
      color white

footer
  position relative
  padding 32px
  background black
  color white
  font-size 14px

  ul.social
    text-align right
    display block
    position absolute
    top -4px
    left 0
    right 0
    margin 0 auto

    list-style none
    display inline-block

    li
      display inline-block
      margin 0 3px
      a
        display inline-block
        width 30px
        height 30px
        &:hover
          opacity 1
          text-decoration none
        &.twitter
          background url('../images/social-twitter.png')
          &:hover
            background url('../images/social-twitter-over.png')
        &.facebook
          background url('../images/social-facebook.png')
          &:hover
            background url('../images/social-facebook-over.png')
        &.linkedin
          background url('../images/social-linkedin.png')
          &:hover
            background url('../images/social-linkedin-over.png')
