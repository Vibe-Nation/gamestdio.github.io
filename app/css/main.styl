*
  margin 0
  padding 0

body
  width 100vw
  height 100vh

header
  width 100vw
  height 100vh
  display block
  background url('../images/background.jpg') center no-repeat
  background-size cover

  &:before
    display block
    width 100%
    height 100%
    position absolute
    content ''
    top 0
    left 0
    background rgba(0,0,0,0.7)

  img
    position absolute
    left 0
    right 0
    top 40%
    margin auto
    width 50%
