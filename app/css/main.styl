@import fonts

color-contrast = #57c98f

*
  margin 0
  padding 0

body
  font-size 18px
  width 100vw
  height 100vh
  font-family 'Open Sans', sans-serif

h1
  font-size 3.5em
  text-align center
  font-family 'seasons-spring'
  color color-contrast

header
  width 100vw
  height 100vh
  display block
  background url('../images/background.jpg') center no-repeat
  background-size cover

  &:before
    display block
    width 100%
    height 100%
    position absolute
    content ''
    top 0
    left 0
    background rgba(0,0,0,0.7)

  &:after
    display block
    content ''
    position absolute
    bottom 5vh
    left 0
    right 0
    margin-left auto
    margin-right auto
    width 59px
    height 19px
    background url('../images/arrow.png') no-repeat

  img
    position absolute
    left 0
    right 0
    top 44%
    margin auto
    @media (max-width: 800px)
      width 50%

nav
  position relative
  background url('../images/background.jpg') center no-repeat
  background-size cover
  display block
  width 100%
  padding 50px 0

  &:before
    display block
    position absolute
    width 100%
    height 100%
    content ''
    top 0
    left 0
    background rgba(0,0,0,0.7)

  ul
    float right
    display inline-block
    margin 10px 0
    li
      display inline-block
      &:not(:last-child)
        padding-right 20px
      a
        font-size 1.2em
        color white
        text-decoration none
        display inline-block
        &.current
          color color-contrast


.content
  position relative
  margin 0 auto
  width 80vw

section
  margin 20vh 0
  //

footer
  padding 24px
  background black
  color white
  font-size 14px
